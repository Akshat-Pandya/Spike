<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Video Title"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/textDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is a short video description "
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginTop="8dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/like_icon"
            android:layout_width="34sp"
            android:layout_height="34sp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/baseline_thumb_up_alt_24"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/like_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="54"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/dislike_icon"
            android:layout_width="34sp"
            android:layout_height="34sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="22sp"
            android:src="@drawable/baseline_thumb_down_alt_24"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/dislike_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="Dislike"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="15sp" />


        <ImageView
            android:layout_width="34sp"
            android:layout_height="34sp"
            android:layout_gravity="center"
            android:layout_marginTop="22sp"
            android:src="@drawable/baseline_comment_24"
            app:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="5,349"
            android:textColor="@color/white"
            android:textSize="15sp" />


        <ImageView
            android:id="@+id/share_button"
            android:layout_width="34sp"
            android:layout_height="34sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="22sp"
            android:padding="4sp"
            android:src="@drawable/share"
            app:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Share"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/save"
            android:layout_width="34sp"
            android:layout_height="34sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="22sp"
            android:padding="4sp"
            android:src="@drawable/baseline_library_add_24"
            app:tint="@color/white" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Save"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_icon"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30sp"
            android:src="@drawable/ic_launcher_background" />

    </LinearLayout>

</RelativeLayout>
